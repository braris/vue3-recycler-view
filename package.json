{
  "name": "vue3-recycler-view",
  "version": "1.0.0",
  "description": "A vue3 component that recycles child components to improve scrolling performance for large lists.",

  "main": "dist/vue3-recycler-view.ssr.js",
  "browser": "dist/vue3-recycler-view.esm.js",
  "module": "dist/vue3-recycler-view.esm.js",
  "unpkg": "dist/vue3-recycler-view.min.js",
  "types": "vue3-recycler-view.d.ts",

  "files": [
    "dist/*",
    "vue3-recycler-view.d.ts",
    "src/**/*.vue",
    "src/**/*.ts"
  ],
  "sideEffects": false,

  "scripts": {
    "serve": "vue-cli-service serve dev/serve.ts",
    "build": "cross-env NODE_ENV=production rollup --config build/rollup.config.js",
    "build:ssr": "cross-env NODE_ENV=production rollup --config build/rollup.config.js --format cjs",
    "build:es": "cross-env NODE_ENV=production rollup --config build/rollup.config.js --format es",
    "build:unpkg": "cross-env NODE_ENV=production rollup --config build/rollup.config.js --format iife"
  },

  "repository": {
    "type": "git",
    "url": "git+https://github.com/braris/vue3-recycler-view.git"
  },
  "keywords": [
    "vue",
    "vue3",
    "big-data",
    "big-list",
    "scroll-list",
    "recycler-view"
  ],
  "author": "braris",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/braris/vue3-recycler-view/issues"
  },
  "homepage": "https://github.com/braris/vue3-recycler-view#readme",

  "dependencies": {
  },

  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-typescript": "^7.12.7",
    "@rollup/plugin-alias": "^3.1.1",
    "@rollup/plugin-babel": "^5.2.2",
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.0.1",
    "@rollup/plugin-replace": "^2.3.4",
    "@vue/cli-plugin-babel": "^4.5.10",
    "@vue/cli-plugin-typescript": "^4.5.10",
    "@vue/cli-service": "^4.5.10",
    "@vue/compiler-sfc": "^3.0.5",
    "cross-env": "^7.0.3",
    "minimist": "^1.2.5",
    "postcss": "^8.2.3",
    "rollup": "^2.36.1",
    "rollup-plugin-postcss": "^4.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-vue": "^6.0.0",
    "typescript": "^3.8.3",
    "vue": "^3.0.5"
  },
  "peerDependencies": {
    "vue": "^3.0.5"
  },
  "engines": {
    "node": ">=12"
  }
}
